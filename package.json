{
  "name": "saber",
  "version": "0.1.2",
  "description": "A minimalistic framework for building static website using Vue.js",
  "repository": {
    "url": "egoist/saber",
    "type": "git"
  },
  "main": "lib/index.js",
  "bin": "bin/cli.js",
  "files": [
    "bin",
    "lib",
    "webpack.config.js"
  ],
  "scripts": {
    "test": "npm run lint && echo 'no tests!'",
    "lint": "xo",
    "toc": "doctoc README.md"
  },
  "author": "egoist <0x142857@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.0.0-beta.47",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0-beta.47",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.47",
    "@babel/preset-env": "^7.0.0-beta.47",
    "@babel/runtime": "^7.0.0-beta.47",
    "babel-loader": "^8.0.0-beta.3",
    "cac": "^5.0.10",
    "chalk": "^2.4.1",
    "chokidar": "^2.0.3",
    "connect-history-api-fallback": "^1.5.0",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "debug": "^3.1.0",
    "express": "^4.16.3",
    "fast-glob": "^2.2.2",
    "file-loader": "^1.1.11",
    "fs-extra": "^6.0.1",
    "html-webpack-plugin": "^3.2.0",
    "joycon": "^1.0.3",
    "object-assign": "^4.1.1",
    "path-to-regexp": "^2.2.1",
    "postcss-loader": "^2.1.5",
    "promise-polyfill": "^7.1.2",
    "register-service-worker": "^1.2.0",
    "require-from-string": "^2.0.2",
    "resolve-from": "^4.0.0",
    "slash": "^2.0.0",
    "time-fix-plugin": "^2.0.1",
    "url-loader": "^1.0.1",
    "vue": "^2.5.16",
    "vue-loader": "^15.2.0",
    "vue-meta": "^1.5.0",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.16",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.8.3",
    "webpack-chain": "^4.8.0",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-client": "^3.0.0",
    "webpack-node-externals": "^1.7.2",
    "webpackbar": "^2.6.1",
    "workbox-build": "^3.2.0",
    "yarn-global": "^1.1.0"
  },
  "devDependencies": {
    "axios": "^0.18.0",
    "doctoc": "^1.3.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-rem": "^4.0.0",
    "eslint-import-resolver-webpack": "^0.10.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^1.0.0-rc.6",
    "lint-staged": "^7.1.2",
    "postcss-nested": "^3.0.0",
    "prettier": "^1.12.1",
    "xo": "^0.18.0"
  },
  "xo": {
    "extends": [
      "rem",
      "plugin:prettier/recommended"
    ],
    "envs": [
      "jest"
    ],
    "rules": {
      "unicorn/filename-case": "off",
      "unicorn/no-abusive-eslint-disable": "off",
      "import/no-unresolved": "off"
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "webpack.config.js"
        }
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ],
    "README.md": [
      "yarn toc",
      "git add"
    ]
  },
  "keywords": [
    "ssr",
    "static",
    "static website",
    "next.js",
    "nuxt.js",
    "vue",
    "peco",
    "egoist",
    "spa",
    "app",
    "web",
    "framework"
  ]
}
